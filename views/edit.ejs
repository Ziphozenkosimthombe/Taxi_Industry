<%- include('partials/header') -%>
<body class="container mt-3 d-flex flex-column">
  <a class="navbar-brand" href="/taxiTable">
    <img
      src="/imgs/default.png"
      alt="logo-taxi"
      sizes="32x32"
      class="logo__taxi" />
  </a>
  <% for (let i=0; i < posts.length; i++) { %> <% if (posts[i]._id==texiId) { %>
  <form action="/updateEdit/<%= posts[i]._id %>" method="POST" class="mt-5">
    <input type="number" name="number" value="<%= posts[i].number %>" />
    <input
      type="text"
      name="placeToDeliver"
      value="<%= posts[i].placeToDeliver %>" />
    <button type="submit" id="updateButton">confirm</button>
  </form>

  <table>
    <thead>
      <tr>
        <th>DriversName</th>
        <th>placeToDeliver</th>
        <th>numberPlate</th>
        <th>Number</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= posts[i].userName %></td>
        <td><%= posts[i].placeToDeliver %></td>
        <td><%= posts[i].numberPlate %></td>
        <td><%= posts[i].number %></td>
        <td class="edit">
          <a href="/edit/<%= posts[i]._id %>"><i class="fa fa-edit"></i></a>
        </td>
        <a href="/taxiTable">Cancel</a>
      </tr>
    </tbody>
  </table>
  <% } %> <% } %>
</body>
<%- include('partials/footer') -%>
